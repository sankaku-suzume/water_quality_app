-# 採水詳細（Sample#show）
.container
  .sample_header
    %h1 採水詳細
    .sample_header-buttons
      = link_to "編集", edit_plant_sample_path(@sample.plant, @sample), class: "btn btn-edit"
      = link_to "削除", plant_sample_path(@sample.plant, @sample), method: :delete, data: { confirm: "この採水データを削除しますか？" }, class: "btn btn-delete"

  / パンくず
  %nav.breadcrumbs
    = link_to "事業場一覧", plants_path
    %span ›
    = link_to @sample.plant.name, plant_path(@sample.plant)
    %span ›
    %span 採水詳細


  %h2.sample_plant-name= @sample.plant.name

  %table.sample-table
    %tbody
      %tr
        %th 採水日
        %td= l(@sample.sampling_date, format: :long)
      %tr
        %th 採水時間
        %td= @sample.sampling_time&.strftime("%H:%M")
      %tr
        %th 採水場所
        %td= @sample.location
      %tr
        %th 採水者
        %td= @sample.inspector
      %tr
        %th 備考
        %td= @sample.remarks.present? ? simple_format(@sample.remarks) : "-"

  / 操作
  %div.actions
    = link_to "事業場", plant_path(@sample.plant), class: "btn btn-show"
    = link_to "採水一覧", plant_samples_path(@sample.plant), class: "btn btn-show"
