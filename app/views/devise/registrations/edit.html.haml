.container
  %h2
    パスワード変更
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field.user_field
      = f.label :email, class: 'user_label'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'user_form-text'
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    .field.user_field
      = f.label :password, class: 'user_label'
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'user_form-text'
      - if @minimum_password_length
        %br/
        %em.user_min-password
          = @minimum_password_length
          文字以上
    .field.user_field
      = f.label :password_confirmation, class: 'user_label'
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'user_form-text'
    .field.user_field
      = f.label :current_password, class: 'user_label'
      %br/
      = f.password_field :current_password, autocomplete: "current-password", class: 'user_form-text'
    .actions.user_actions
      = f.submit "更新", class: 'btn btn-new'
  %h3.user_delete-title アカウントを削除する
  %div
    = button_to "削除する", registration_path(resource_name), data: { confirm: "本当に削除してよろしいですか?", turbo_confirm: "本当に削除してよろしいですか?" }, method: :delete, class: 'user_delete-btn'
  = link_to "戻る", :back, class: 'btn btn-show'
