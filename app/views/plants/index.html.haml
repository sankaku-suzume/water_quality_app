.container
  .plants_header
    %h1 事業場一覧
    .plants-header_btn
      = link_to "新規作成", new_plant_path, class: "btn btn-new"
  .plants-search_wrapper
    = search_form_for @search do |f|
      = f.search_field :name_or_location_cont
      .plants-search_action
        = f.submit '検索'
  = turbo_frame_tag 'plants-list' do
    .plants_table
      - @plants.each do |plant|
        .plants-table_content
          = link_to plant_path(plant) do
            .plants-table_name= plant.name
            .plants-table_location= plant.location
      = paginate @plants



  = link_to 'ホームに戻る', root_path, class: 'btn btn-show'
