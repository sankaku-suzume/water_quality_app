.container
  %h2 ログイン
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field.user_field
      = f.label :email, class: 'user_label'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'user_form-text'
    .field.user_field
      = f.label :password, class: 'user_label'
      %br/
      = f.password_field :password, autocomplete: "current-password", class: 'user_form-text'
    - if devise_mapping.rememberable?
      .field.user_field
        = f.check_box :remember_me
        = f.label :remember_me, class: 'user_label'
    .actions.user_actions
      = f.submit "ログイン", class: 'btn btn-new'
  = render "devise/shared/links"
