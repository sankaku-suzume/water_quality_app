.container
  %h2 アカウントを作成する
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field.user_field
      = f.label :name, class: 'user_label'
      %br/
      = f.text_field :name, autofocus: true, class: 'user_form-text'
    .field.user_field
      = f.label :email, class: 'user_label'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'user_form-text'
    .field.user_field
      = f.label :password, class: 'user_label'
      - if @minimum_password_length
        %em
          (#{@minimum_password_length}文字以上)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'user_form-text'
    .field.user_field
      = f.label :password_confirmation, class: 'user_label'
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'user_form-text'
    .actions.user_actions
      = f.submit "新規作成", class: 'btn btn-new'
  = render "devise/shared/links"
